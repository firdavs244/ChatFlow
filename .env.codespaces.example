# ===========================================
# CHATFLOW - Environment Configuration for Codespaces
# ===========================================

# Application
APP_NAME=ChatFlow
APP_ENV=codespaces
DEBUG=true
SECRET_KEY=codespaces-dev-secret-key-2024

# PostgreSQL Database
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=chatflow
POSTGRES_PASSWORD=chatflow_secure_password_2024
POSTGRES_DB=chatflow_db

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_secure_password_2024
REDIS_DB=0

# JWT Authentication
JWT_SECRET_KEY=jwt-codespaces-secret-key-2024
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# MinIO (S3-compatible storage)
MINIO_HOST=minio
MINIO_PORT=9000
MINIO_ROOT_USER=chatflow_minio
MINIO_ROOT_PASSWORD=minio_secure_password_2024
MINIO_BUCKET_NAME=chatflow-files

# Celery
CELERY_BROKER_URL=redis://:redis_secure_password_2024@redis:6379/1
CELERY_RESULT_BACKEND=redis://:redis_secure_password_2024@redis:6379/2

# Frontend (Codespaces uses forwarded ports)
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000
NEXT_PUBLIC_APP_NAME=ChatFlow

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# File Upload Limits
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,video/mp4,video/webm,audio/mpeg,audio/wav,application/pdf,application/zip
